1)Check no. even or odd:
#include <iostream>
using namespace std;

int main()
{   int n;
    cin>>n;
    if((n&1)==0)
    {   cout<<"even";
    }
    else
    {   cout<<"not even";
    }
    return 0;
}


2)Swap 2 numbers without 3rd variable:
#include <iostream>
using namespace std;

int main()
{
    int a,b;
    cin>>a>>b;
    cout<<"before swap----> "<<"a="<<a<<" b="<<b<<endl;
    a=a^b;
    b=a^b;
    a=a^b;
    cout<<"after swap ---->"<<"a="<<a<<" b="<<b<<endl;
    
    return 0;
}


#include <iostream>

using namespace std;

int main()
{
    int a[6]={2,1,6,7,11,5};
    int k=1;
    int count=0;
    int pos,change;
    for(int i=0;i<6;i++)
    {
        if(a[i]%2==0)
        {
            count+=1;
            
            cout<<"i is"<<i<<endl;
            continue;
        }
        else
        {
            change=i+1;
            for(int j=i+1;j<6 && k>0;j++)
            {
                if(a[j]%2!=0)
                {
                    pos=j;
                    cout<<"in pos wala"<<endl;
                    break;
                }
            }
            if((pos>change) &&(pos<6))
            {
                
                cout<<"hello"<<endl<<pos<<" "<<i;
            //swap(a[i],a[pos]);
                a[change]=a[change]^a[pos];
                a[pos]=a[pos]^a[change];
                a[change]=a[pos]^a[change];
                k--;
                count+=1;
            }
            cout<<"iis"<<change<<endl;
            i=i+1;
        }
        
    }
    cout<<"count is"<<count;
    
}
